@model IEnumerable<Task1.Models.User>

@{
    ViewData["Title"] = "Users List";
}

<style>
    .user-table-container {
        max-width: 1000px;
        margin: 40px auto;
        background-color: #1e1e1e;
        color: #ddd;
        padding: 25px;
        border-radius: 10px;
        box-shadow: 0 0 10px #00000088;
    }

    .table-dark th,
    .table-dark td {
        vertical-align: middle;
    }

    .btn-sm {
        min-width: 70px;
    }
</style>

<div class="user-table-container">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h3 class="text-light">Users List</h3>
        <a href="/Users/Create" class="btn btn-success">+ Add</a>
    </div>

    <table class="table table-dark table-striped table-hover rounded">
        <thead>
            <tr>
                <th>Fullname</th>
                <th>Email</th>
                <th>Date of birth</th>
                <th>Phone number</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var user in Model)
            {
                <tr>
                    <td>@user.FullName</td>
                    <td>@user.Email</td>
                    <td>@user.DateOfBirth.ToString("dd/MM/yyyy")</td>
                    <td>@user.PhoneNumber</td>
                    <td>
                        <a class="btn btn-sm btn-warning me-1" href="/Users/Edit/@user.Id">Edit</a>
                        <a class="btn btn-sm btn-danger" href="/Users/Delete/@user.Id">Remove</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
